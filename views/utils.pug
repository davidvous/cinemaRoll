mixin validationErrorSummary(errors)                                                     
  if errors                                                                              
    div(class='alert alert-danger' role='alert')                                         
      p The following error(s) occurred:                                                 
      ul                                                                                 
        each error in errors                                                             
          li(style={color: 'red'})= error

mixin blockList(arrayOfGenres, divId)
    div(id= divId)
        each genre in arrayOfGenres
          a(href= `/genres/${genre}/`)=genre 
          br
